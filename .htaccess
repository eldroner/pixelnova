Options -MultiViews
RewriteEngine On
RewriteBase /
# Nunca reescribir est√°ticos
RewriteCond %{REQUEST_URI} \.(?:js|mjs|css|png|jpe?g|gif|svg|ico|webp|map|wasm|txt|json|woff2?|ttf|eot)$ [NC]
RewriteRule ^ - [L]
# Sirve si existe
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]
# Fallback SPA
RewriteRule ^ index.html [L]
# MIME (por si acaso)
AddType text/javascript .js .mjs
AddType text/css .css
AddType application/wasm .wasm


